<h2>Search Books</h2>
<form action="/books" method="GET">
  <div>
    <label for="search">Title</label>
    <input type="text" name="title" value="<%= searchOptions.title %>" >
  </div>
  <div>
    <label for="publishAfter">Publish After</label>
    <input type="date" name="publishAfter" id="<%= searchOptions.publishAfter %>" value="<%= searchOptions.publishAfter %>">
  </div>
  <div>
    <label for="publishBefore">Publish Before</label>
    <input type="date" name="publishBefore" id="<%= searchOptions.publishBefore %>" value="<%= searchOptions.publishBefore %>">
  </div>

  <button type="submit">Search</button>
</form>

<br>

<div>
  <% books.forEach(book=>{ %>
    <img src="<%= book.coverImagePath %>" alt="" width="100" height="150">
  <% }) %>  
</div>
