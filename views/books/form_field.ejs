<div class="form-row">
    <div class="form-items">
        <label for="title">Title</label>
        <input type="text" name="title" value="<%= book.title %>" id="title">
    </div>
    <div class="form-items">
        <label>Author</label>
        <select name="author">
            <% authors.forEach(author=>{ %>
            <% if(author.id === book.author){ %>
            <option selected label="<%= author.name %> " value="<%= author.id %>">
                <% }else{ %>
            <option label="<%= author.name %> " value="<%= author.id %>">
                <% } %>
                <% }) %>
        </select>
    </div>
</div>
<div class="form-row">
    <div class="form-items">
        <label for="publishDate">Publish Date</label>
        <input type="date" name="publishDate" id="publishDate"
            value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] %> ">
    </div>
    <div class="form-items">
        <label for="pageCount">Page Count</label>
        <input type="number" name="pageCount" min="1" value="<%= book.pageCount %>" id="pageCount">
    </div>
</div>
<div class="form-row">
    <div class="form-items form-item-no-grow">
        <label for="coverImageName">Cover</label>
        <input type="file" name="cover" class="book-cover filepond" id="coverImageName">
    </div>
    <div class="form-items">
        <label for="description">Description</label>
        <textarea name="description" id="description"><%= book.description %></textarea>
    </div>
</div>