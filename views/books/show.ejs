<h1 class="page-header"><%= book.title %> </h1>
<div class="books-details">
    <div>
        <img width="120" height="170" src="<%= book.coverImagePath %> " alt="">
        <div class="book-details-btn-grid">
            <a class="btn btn-primary" href="/books/<%= book.id %>/edit">Edit</a>
            <%- include('../partial/deleteForm.ejs', ({url:`/books/${book.id}`})) %>
            <a class="btn btn-primary book-details-author-button" href="/authors/<%= book.author.id %>">View Author</a>
        </div>
    </div>
    <div class="book-details-grid">
        <div class="books-details-lebel">Author:</div>
        <div><%= book.author.name %> </div>

        <div class="books-details-lebel">Publish Date:</div>
        <div><%= book.publishDate.toDateString() %></div>

        <div class="books-details-lebel">Page Count:</div>
        <div><%= book.pageCount %></div>

        <div class="books-details-lebel">Description:</div>
        <div><%= book.description %></div>
    </div>
</div>