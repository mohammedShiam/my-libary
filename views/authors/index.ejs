<h2 class="page-header" >Search Authors</h2>
<form action="" method="GET">
  <div>
    <label for="search">Name</label>
    <input type="text" name="name" value="<%= searchOptions.name %>" >
  </div>
  <button  type="submit">Search</button>
</form>

<br>

  <% authors.forEach(author=>{ %>
    <div><%= author.name %></div>
    <div class="btn-row">
      <a href="/authors/<%= author.id %>" class="btn btn-primary">View</a>
      <a href="/authors/<%= author.id %>/edit" class="btn btn-primary">Edit</a>
      <%- include('../partial/deleteForm.ejs', {url:`/authors/${author.id}`}) %>
    </div>
<% }) %>  